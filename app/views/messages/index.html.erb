<div class="container py-2">
  <div class="row">
    <div class="col">
      <span class="h3">Messages</span>
    </div>
    <div class="col text-end">
      <%= link_to "Send New Message", new_message_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">id#</th>
      <th scope="col">Message Body</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <th scope="row"><%= message.id %></th>
        <td><%= message.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>