<div class="container px-5">
  <div class="h2 my-4">Log in to your account</div>
  <%= form_with(url: login_path, scope: :session) do |f| %>
    <div class="row align-items-start">
      <%= f.label :email, "Email", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-4 mb-4">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="row align-items-start">
      <%= f.label :password, "Password", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-4 mb-4">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div>
      <%= f.submit "Log In", class: "btn btn-primary" %>
    </div>
  <% end %>
  <p class="h6 my-4">New user? <%= link_to "Sign up now!", signup_path %></p>
</div>