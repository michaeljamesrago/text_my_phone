<div class="container px-5">
  <div class="h2 my-4">Create your account</div>
  <%= form_with(model: @user) do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="row align-items-start">
      <%= f.label :name, "Name", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-4 mb-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="row align-items-start">
      <%= f.label :email, "Email", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-4 mb-4">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="row align-items-start">
      <%= f.label :password, "Password", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-4 mb-4">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="row align-items-start">
      <%= f.label :password_confirmation, "Confirm", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-4 mb-4">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    <div>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    </div>
  <% end %>
  <p class="h6 my-4">Already have an account? <%= link_to "Log In", login_path %></p>
</div>